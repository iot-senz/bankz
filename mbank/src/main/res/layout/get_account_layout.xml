<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#306d97"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/get_account_layout_back"
                android:layout_width="53dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/button_selector"
                android:clickable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back"
                    android:adjustViewBounds="false"></ImageView>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="#306d97"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/get_account_layout_back">

                <TextView
                    android:id="@+id/get_account_layout_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="New Transaction/GetAccountNo"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/get_account_layout_done"
                android:layout_width="53dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_selector"
                android:clickable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/done"></ImageView>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"

                    android:background="#306d97"></TextView>
            </RelativeLayout>

        </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/get_account_layout_id_numberView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:text="ID Number"
                        android:textColor="#4a4a4a"
                        android:textSize="20dp"></TextView>

                    <EditText
                        android:id="@+id/get_account_layout_id_number_text"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/text_filed_shape"
                        android:inputType="text"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:textColor="#f6131313"
                        android:textCursorDrawable="@null"
                        android:textSize="18dp"
                        android:hint="e.g 123456789v"
                        android:textColorHint="#f6afa9ba">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="25dp"
                        android:text="Note"
                        android:textColor="#4a4a4a"
                        android:textSize="17dp"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="93dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                </LinearLayout>
            </LinearLayout>

    </LinearLayout>
</LinearLayout>